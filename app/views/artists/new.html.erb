<%= form_for @artist do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name of the artist", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Country</label>
    <%= f.text_field :country, placeholder: "Country of origin", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Describtion</label>
    <%= f.text_area :describtion, placeholder: "Small text about the artist. (max 500 chars)", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
