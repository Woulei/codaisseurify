<div class="panel panel-primary">
  <div class="panel-heading"><%= @artist.name %></div>

  <div class="panel-body">
    <p><%= @artist.describtion %></p>
    <p>
      <% @artist.photos.each do |photo| %>
        <%= image_tag photo.image %>
      <% end %>
    </p>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">Songs</div>

  <div class="panel panel-primary">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name:</th>
          <th>Album:</th>
          <th>Release Date:</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @artist.songs.each do |song| %>
          <tr>
            <th><%= song.name %></th>
            <th><%= song.album %></th>
            <th><%= song.release_date %></th>
            <th><%= link_to "See Song", artist_song_url(@artist.id, song.id) %></th>
            <th><%= link_to "Edit Song", edit_artist_song_url(@artist.id, song.id) %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "All Artists", artists_url, class: "btn btn-default" %>
<%= link_to "Add new Song",  new_artist_song_url(@artist.id), class: "btn btn-default" %>
<%= link_to "Edit Artist", edit_artist_url(@artist.id), class: "btn btn-default" %>
<%= link_to "Delete Artist", artist_url(@artist.id), method: :delete, data: { confirm: "Are you sure? \n All songs will be deleted too." }, class: "btn btn-default" %>
