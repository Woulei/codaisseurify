<%= form_for @song, url: artist_songs_path do |f| %>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name of the song", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "What album was it released from?", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Release Date</label>
    <%= f.date_select :release_date %>

  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
